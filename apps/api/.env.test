# Test Environment Configuration
# This file is used by integration tests

# Server
SERVER_PORT=3001
SERVER_HOST=127.0.0.1
CORS_ORIGINS=*
ENVIRONMENT=test

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/vibe_test
DATABASE_MAX_CONNECTIONS=5
DATABASE_MIN_CONNECTIONS=1
DATABASE_ACQUIRE_TIMEOUT_SECS=5
DATABASE_IDLE_TIMEOUT_SECS=10

# JWT
JWT_SECRET=test_secret_key_for_integration_tests_do_not_use_in_production
JWT_ACCESS_TOKEN_EXPIRY_HOURS=1
JWT_REFRESH_TOKEN_EXPIRY_DAYS=7
JWT_ISSUER=vibe-api-test

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Logging
RUST_LOG=info,vibe_api=debug
